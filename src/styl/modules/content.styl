html, body, .anchor
  width 100%
  height 100%
.anchor
  perspective: 1000px;
  position fixed
.menu-open
  overflow: hidden
.content
  background $white
  transition: transform .4s
  position fixed
  transform none
  overflow: auto;
  width: 100%;
  height: 100%;   
  &:after
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 0px;
      opacity: 0;

  .menu-open &
    transform: translateZ(-1000px) translateX(100%) rotateY(-45deg);
    &:after
      opacity: 1;
      height: 101%;
