.menu
  @media mobile
    &-mobile
      z-index -1
      position fixed
      inset: 0
      background $accent-color-light
      padding: 100px 50px;
      display: flex;
      flex-direction: column;
      gap 32px
    &-desktop
      display none
  @media desktop
    &-desktop
      display flex
      gap 32px
    &-mobile
      display none


  &__item
    color $main-color
    font-weight 400
    font-size 16px
    text-transform uppercase
    font-family $text-font
    transition $transition
    &:hover
      color $main-color-light
    @media mobile
      font-size 30px
      font-weight bold
    
